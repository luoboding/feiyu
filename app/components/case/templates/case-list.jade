// page heading start
.page-heading
  ul.breadcrumb.panel
    li
      a(href='#')
        i.fa.fa-home
        |  工作台
    li
      a(href='#') 营销管理
    li.active 营销方案列表
// page heading end
// main content start
.main-content
  // body wrapper start
  .wrapper
    .col-sm-12
      section.panel
        .panel-heading
          | 营销方案列表
          form.form-inline(role='form',name='vm.form', ng-submit='vm.search()', style='margin-top: 10px;')
            .row
              .col-md-10
                .col-md-12.no-padding
                  input.form-control(type='text', name='name', ng-model='vm.searchParams.name' placeholder='请输入案例名称')
                  input.form-control(type='text', name='attribute', ng-model='vm.searchParams.attribute' placeholder='案例属性，以逗号分开')
              .col-md-2
                .col-md-6
                    button.btn.btn-primary(type='submit') 查询
                .col-md-6
                    a.btn.btn-primary(ui-sref='app.case.create()') 添加
        .panel-body
          table.table.table-hover.general-table
            thead
              tr
                th 编号
                th 名称
                td 属性
                th 关联产品
                th 点赞数
                th 操作
            tbody
              tr(ng-repeat='item in vm.list')
                td {{item.id}}
                td.center {{item.name}}
                td.center {{item.attribute}}
                td.center {{item.products}}
                td.center {{item.praise}}
                td 
                    a.btn.btn-sm.btn-info(ui-sref='app.case.view({id: item.id})') 查看
      .row
        .pagination.pagination-sm.no-margin.pull-right(uib-pagination='', items-per-page='vm.pager.size', total-items='vm.pager.total', ng-model='vm.pager.page', max-size='vm.pager.max', boundary-links='true', rotate='false', num-pages='vm.pager.pageNumber', ng-change='vm.pageChanged()', first-text='首页', previous-text='前一页', next-text='后一页', last-text='末页')
  // body wrapper end
