// page heading start
.page-heading
  ul.breadcrumb.panel
    li
      a(href='#')
        i.fa.fa-home
        |  工作台
    li
      a(href='#') 设置
    li.active 巡店计划列表
// page heading end
// main content start
.main-content
  // body wrapper start
  .wrapper
    .col-sm-12
      section.panel
        .panel-heading
          | 巡店计划列表
          form.form-inline(role='form',name='vm.form', ng-submit='vm.search()', style='margin-top: 10px;')
            .row
              .col-md-10
                .col-md-4.no-padding
                    label.control-label.col-md-3 名称
                    .col-md-9
                        input.form-control(type='text', name='name', ng-model='vm.searchParams.name' placeholder='请输入计划名称')
                .col-md-4.no-padding
                    label.control-label.col-md-3 编号
                    .col-md-9
                        input.form-control(type='text', name='name', ng-model='vm.searchParams.marketplanno' placeholder='请输入计划名称')
                .col-md-4.no-padding
                    label.control-label.col-md-3 负责人
                    .col-md-9
                        select.form-control(ng-model='vm.searchParams.manager_id', ng-options='item.id as item.name for item in vm.manager')
                            option(value='') --请选择--
              .col-md-2
                .col-md-6
                    button.btn.btn-primary(type='submit') 查询
                .col-md-6    
                    a.btn.btn-primary(ui-sref='app.patrol.create()') 添加
        .panel-body
          table.table.table-hover.general-table
            thead
              tr
                th 编号
                td 创建时间
                th 名称
                th 创建人
                th 编号
                th 开始时间
                th 结束时间
                th 操作
            tbody
              tr(ng-repeat='item in vm.list')
                td {{item.id}}
                td.center {{item.cd}}
                td.center {{item.name}}
                td.center {{item.manager_name}}
                td.center {{item.marketplanno}}
                td.center {{item.startdate}}
                td.center {{item.enddate}}
                td
                    .col-md-4.no-padding
                      .col-md-6.no-padding
                        a.btn.btn-sm.btn-info(ui-sref='app.patrol.edit({id: item.id})') 编辑
      .row
        .pagination.pagination-sm.no-margin.pull-right(uib-pagination='', items-per-page='vm.pager.size', total-items='vm.pager.total', ng-model='vm.pager.page', max-size='vm.pager.max', boundary-links='true', rotate='false', num-pages='vm.pager.pageNumber', ng-change='vm.pageChanged()', first-text='首页', previous-text='前一页', next-text='后一页', last-text='末页')
  // body wrapper end
