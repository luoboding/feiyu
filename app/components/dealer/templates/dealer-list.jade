// page heading start
.page-heading
  ul.breadcrumb.panel
    li
      a(href='#')
        i.fa.fa-home
        |  工作台
    li
      a(href='#') 信息管理
    li.active 营销管理
// page heading end
// main content start
.main-content
  // body wrapper start
  .wrapper
    .col-sm-12
      span {{vm | json}}
      section.panel
        .panel-heading
          | 营销方案列表
          form.form-inline(role='form', style='margin-top: 10px;')
            .row
              .col-md-12
                .col-md-4
                  label.control-label.col-md-3(style='margin-top: 5px;') 编号
                  .col-md-9
                    input.form-control(type='email',placeholder='请输入方案编号\名称')
                .col-md-4
                  label.control-label.col-md-3(style='margin-top: 5px;') 名称
                  .col-md-9
                    input.form-control(type='email', placeholder='请输入方案编号\名称')
                .col-md-4
                  label.control-label.col-md-3(style='margin-top: 5px;') 法人
                  .col-md-9
                    input.form-control(type='email', placeholder='请输入方案编号\名称')
            .row
              .col-md-11
                .col-md-6
                  input.form-control(type='email', placeholder='请输入方案编号\名称')
                  select.form-control
                    option 选择类型
                    option 门类
                    option 窗类
                  select.form-control
                    option 选择状态
                    option 执行中
                    option 待执行
                .col-md-6
                  label.control-label.col-md-3(style='margin-top: 5px;') 创建时间
                  .col-md-9.input-group.input-large.custom-date-range(data-date='13/07/2013', data-date-format='mm/dd/yyyy')
                    input.form-control.dpd1(type='text', name='from', placeholder='开始时间')
                    span.input-group-addon To
                    input.form-control.dpd2(type='text', name='to', placeholder='结束时间')
              .col-md-1
                button.btn.btn-primary 查询
            //
              <div class="form-group">
              <label class="col-lg-2 col-sm-2 control-label" for="exampleInputEmail2">Email address</label>
              <input type="email" class="col-lg-10" id="exampleInputEmail2" placeholder="Enter email">
              </div>
              <div class="form-group">
              <label class="sr-only" for="exampleInputPassword2">Password</label>
              <input type="password" class="form-control" id="exampleInputPassword2" placeholder="Password">
              </div>
        .panel-body
          table.table.table-hover.general-table
            thead
              tr
                th 编号
                th 经销商名称
                th 法人
                th 电话
                th 类型
                th 状态
                th 地址
                th 门店数量
                th 信用情况
                th 操作
            tbody
              tr(ng-click='vm.viewDealer()', ng-repeat='item in vm.dealers')
                td.center {{item.dealerno}}
                td.center {{item.name}}
                td.center {{item.legalperson}}
                td.center {{item.mobile}}
                td.center 类型
                td.center {{vm.filterStatus(item.status)}}
                td.center {{item.address}}
                td.center {{item.store.length}}
                td.center {{item.store.credit}}
                td
                  a.btn.btn-sm.btn-info(href="#") 编辑
                  a.btn.btn-sm.btn-warning(href='#') 删除
      .row
        .pagination.pagination-sm.no-margin.pull-right(uib-pagination='', items-per-page='vm.pager.size', total-items='vm.pager.total', ng-model='vm.pager.page', max-size='vm.pager.max', boundary-links='true', rotate='false', num-pages='vm.pager.pageNumber', ng-change='vm.pageChanged()', first-text='首页', previous-text='前一页', next-text='后一页', last-text='末页')

  // body wrapper end
