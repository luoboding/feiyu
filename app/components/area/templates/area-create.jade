// page heading start
.page-heading
  ul.breadcrumb.panel
    li
      a(href='#')
        i.fa.fa-home
        |  工作台
    li
      a(href='#') 经销商等级管理
    li.active 编辑经销商等级
.main-content
  .wrapper
    .col-sm-12
      section.panel
        .panel-heading
          | 添加区域
        .panel-body
          form(name='vm.form', ng-submit='vm.create()')
             .g-md-box.box-info
                .hd
                    h3 添加区域
                .bd
                    .row
                        .form-group.col-md-6(ng-class="{'has-error' : vm.form.pid.$invalid && vm.form.pid.$dirty}")
                            label.col-md-3.col-sm-3.control-label(for='inputPassword1') 所属区域:
                            .col-md-9.col-sm-9.no-padding
                                input#inputPassword1.form-control(type='text',ng-model='vm.area.zone_id', name='zone_id', ng-required="true" placeholder='所属区域')
                    .row
                        .form-group.col-md-6(ng-class="{'has-error' : vm.form.pid.$invalid && vm.form.pid.$dirty}")
                            label.col-md-3.col-sm-3.control-label(for='inputPassword1') 父级:
                            .col-md-9.col-sm-9.no-padding
                                input#inputPassword1.form-control(type='text',ng-model='vm.area.pid', name='pid', ng-required="true" placeholder='父级')
                    .row
                        .form-group.col-md-6(ng-class="{'has-error' : vm.form.name.$invalid && vm.form.name.$dirty}")
                            label.col-md-3.col-sm-3.control-label(for='inputPassword1') 名称:
                            .col-md-9.col-sm-9.no-padding
                                input#inputPassword1.form-control(type='text',ng-model='vm.area.name', name='name', ng-required="true" placeholder='名称')

                .row        
                    .form-group.col-md-12
                        button.btn.btn-primary(type='submit', ng-disabled='vm.levelForm.$invalid') 提交
                        div(ng-show='vm.error') {{vm.error}}
