// page heading start
.page-heading
  ul.breadcrumb.panel
    li
      a(href='#')
        i.fa.fa-home
        |  工作台
    li
      a(href='#') 设置
    li.active 区域管理
// page heading end
// main content start
.main-content
  // body wrapper start
  .wrapper
    .col-sm-12
      section.panel
        .panel-heading
          | 区域列表
          form.form-inline(role='form', style='margin-top: 10px;', name='vm.form', ng-submit='vm.search()')
            .row
              .col-md-10
                .col-md-12
                  input.form-control(type='text', ng-model='vm.searchParams.name' placeholder='请输入名称')
                  select.form-control(ng-model='vm.searchParams.zone_id', name='zone_id', ng-options='item.id as item.name for item in vm.zone')
                    option(value='') 选择区域
                  select.form-control(ng-model='vm.searchParams.pid', name='pid', ng-options='item.id as item.name for item in vm.parent')
                    option(value='') 选择父级
              .col-md-2
                .col-md-6
                    button.btn.btn-primary(type='submit') 查询
                .col-md-6
                    a.btn.btn-primary(ui-sref='app.area.create') 添加
        .panel-body
          table.table.table-hover.general-table
            thead
              tr
                th 编号
                td 区域
                th 名称
                th 操作
            tbody
              tr(ng-repeat='item in vm.list')
                td {{item.id}}
                td.center {{item.zonename}}
                td.center {{item.name}}
                td
                    .col-md-4.no-padding
                        .col-md-6.no-padding
                            a.btn.btn-sm.btn-info(ui-sref='app.area.edit({id: item.id})') 编辑
                        .col-md-6
                            a.btn.btn-sm.btn-warning(ng-click='vm.remove(item.id)') 删除
      .row
        .pagination.pagination-sm.no-margin.pull-right(uib-pagination='', items-per-page='vm.pager.size', total-items='vm.pager.total', ng-model='vm.pager.page', max-size='vm.pager.max', boundary-links='true', rotate='false', num-pages='vm.pager.pageNumber', ng-change='vm.pageChanged()', first-text='首页', previous-text='前一页', next-text='后一页', last-text='末页')
  // body wrapper end
